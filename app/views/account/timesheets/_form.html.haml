.group
  = f.label :date, t("activerecord.attributes.timesheet.date", :default => "Date"), :class => :label
  = f.text_field :date, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :hours, t("activerecord.attributes.timesheet.hours", :default => "Hours"), :class => :label
  = f.text_field :hours, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :notes, t("activerecord.attributes.timesheet.notes", :default => "Notes"), :class => :label
  = f.text_field :notes, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :project_id, t("activerecord.attributes.timesheet.project_id", :default => "Project"), :class => :label
  = f.select :project_id,
    @current_company.projects.all.map {|p| [ p.name, p.id ] }
  
  %span.description Ex: a simple text

.group.navform.wat-cf
  %button.button{:type => "submit"}
    = t("web-app-theme.save", :default => "Log Hours")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), timesheets_path, :class => "text_button_padding link_button"

- content_for :javascript do
  :javascript
    $(function() {
      $('#timesheet_date').datepicker();
    });