%h1 JetTime
.block#block-signup
  %h2 Sign up
  .content
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form" }) do |f|
      = f.fields_for(resource.build_company) do |cf|
        .group
          = cf.label :name, "Company Name", :class => "label"
          = cf.text_field :name, :class => "text_field"
          %span.description Ex. Microsoft LLC
        .group
          = cf.label :subdomain, "Domain", :class => "label"
          %span.description http://
          = cf.text_field :subdomain, :class => "text_field", :style => "width: 70%"
          %span.description .jettime.com

      .group
        = f.label :email, :class => "label"
        = f.text_field :email, :class => "text_field"
        %span.description Ex. test@example.com
      .group
        = f.label :password, :class => "label"
        = f.password_field :password, :class => "text_field"
        %span.description must be at least 6 characters
      .group
        = f.label :password_confirmation, "Re-enter Password", :class => "label"
        = f.password_field :password_confirmation, :class => "text_field"
      .group.navform.wat-cf
        %button.button{ :type => "submit" }
          = image_tag "web-app-theme/themes/default/images/icons/tick.png"
          Sign up
    =# render :partial => "devise/shared/links"
    .span= new_user_session_url
    .span= new_user_session_url(:subdomain => "ttt")
