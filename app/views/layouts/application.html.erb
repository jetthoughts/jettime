<!DOCTYPE html>
<html>
  <head>
    <title>Jettime</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag 'jquery-1.5.0.min', 'jquery-ujs', 'application', 'jquery-ui.min' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="nav">
      <ul>
        <%- [:projects, :intervals].each do |page|  %>
          <li class="<%= page == controller.controller_name.to_sym ? 'active' : ''%>">
            <a href="<%= url_for(page) %>">
              <span><%= page.to_s.humanize %></span>
            </a>
          </li>
        <%- end  %>
      </ul>
    </div>
    <%= yield %>

  </body>
</html>
