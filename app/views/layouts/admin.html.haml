!!!
%html
  %head
    %title Admin Panel | JetTime
    = stylesheet_link_tag 'web-app-theme/base', 'web-app-theme/themes/default/style.css'
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Admin Panel
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              = link_to t("web-app-theme.settings", :default => "Settings"), settings_path
            %li
              =link_to(t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path, :method => :delete)
        #main-navigation
          %ul.wat-cf
            %li{:class => controller.controller_path == 'dashboards' ? 'active' : '' }
              %a{:href => dashboards_path} Dashboards
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Web App.
        #sidebar
          = yield :sidebar

  = javascript_include_tag :application
